generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ── Auth (NextAuth v5) ──────────────────────────────────────

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("user") // user, admin

  accounts      Account[]
  sessions      Session[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ── App Models ──────────────────────────────────────────────

model Bill {
  id          String   @id @default(uuid())
  congress    Int
  type        String   // hr, s, hres, etc. (stored lowercase)
  number      String
  title       String
  sponsor     String?  // Full name: "Rep. Smith, John [D-CA-12]"
  sponsorParty String? // D, R, I
  sponsorState String? // Two-letter state code
  introDate   DateTime?
  status      String?  // e.g. "Introduced", "Passed House"
  policyArea  String?  // Subject category from API
  originChamber String? // "House" or "Senate"
  congressGovUrl String? // Direct link to congress.gov page
  latestActionDate DateTime?
  latestActionText String?

  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())

  versions    BillVersion[]
  actions     BillAction[]
  claims      Claim[]

  @@unique([congress, type, number])
  @@index([status])
  @@index([congress])
  @@index([policyArea])
}

model BillVersion {
  id          String   @id @default(uuid())
  billId      String
  bill        Bill     @relation(fields: [billId], references: [id])
  code        String   // ih, eh, enr
  date        DateTime?
  textUrl     String?

  // Content
  fullText    String?  @db.Text
  sections    Json?    // Structured list of sections [{id, content, header}]

  // AI Analysis
  summary     Json?    // Matches BillSummary Schema
  diffAnalysis Json?   // Matches BillChangeSummary (vs previous)

  createdAt   DateTime @default(now())

  @@unique([billId, code])
}

model BillAction {
  id          String   @id @default(uuid())
  billId      String
  bill        Bill     @relation(fields: [billId], references: [id], onDelete: Cascade)
  date        DateTime
  text        String
  actionType  String?  // Floor, Committee, IntroReferral, BecameLaw, etc.
  chamber     String?  // House, Senate, or source system name

  createdAt   DateTime @default(now())

  @@index([billId])
}

model Claim {
  id          String   @id @default(uuid())
  billId      String?
  bill        Bill?    @relation(fields: [billId], references: [id])

  content     String
  sourceUrl   String?
  sourceDate  DateTime?

  // Config / Admin
  status      String   @default("pending") // pending, checked, error

  // AI Fact Check Result
  verdict     Verdict? // Accurate, False, etc.
  analysis    Json?    // Matches ClaimCheck Schema

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Verdict {
  Accurate
  PartiallyAccurate
  Misleading
  Unsupported
  False
}

model EpsteinDocument {
  id            String   @id @default(uuid())
  title         String
  sourceUrl     String   @unique
  canonicalUrl  String?  @unique // normalized URL for dedup
  finalUrl      String?  // after redirect resolution
  documentType  String?  // court_filing, deposition, exhibit, etc.
  fileType      String   @default("pdf")
  contentType   String?  // MIME type from HTTP response
  pageCount     Int?

  // Content (text only — no file storage)
  rawText       String?  @db.Text
  summary       String?  @db.Text
  lengthChars   Int?     // rawText.length for quick filtering

  // Hashes (computed in-memory, binaries never persisted)
  textHash      String?  // sha256 of extracted text
  byteHash      String?  // sha256 of raw download bytes

  // Metadata
  caseNumber    String?
  filedDate     DateTime?
  parties       String[] // Names mentioned or involved
  keywords      String[] // Derived keywords for faceted search
  entities      String[] // Named entities extracted from text

  // HTTP caching (for conditional re-fetch)
  httpEtag         String?
  httpLastModified String?
  lastFetchedAt    DateTime?

  // Extraction quality
  extractionQuality Float?  // chars_per_page ratio; < 50 = needs OCR
  ocrRequired       Boolean @default(false)

  // Discovery lineage
  discoveryLineage Json?  // [{source, sourceId, context, firstSeen, lastSeen}]

  // Processing
  status        String   @default("pending") // pending, processing, indexed, error, needs_ocr

  // Relations
  urlAliases    UrlAlias[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([status])
  @@index([documentType])
  @@index([byteHash])
  @@index([textHash])
}

// ── URL Dedup & Alias Tracking ──────────────────────────────

model UrlAlias {
  id              String   @id @default(uuid())
  documentId      String
  document        EpsteinDocument @relation(fields: [documentId], references: [id], onDelete: Cascade)
  aliasUrl        String   @unique
  discoverySource String   // "sitemap", "hub:data-set-3", "google:query-42", "ia-cdx"
  firstSeen       DateTime @default(now())
  lastSeen        DateTime @default(now())

  @@index([documentId])
}

// ── Discovery Run Audit Trail ───────────────────────────────

model DiscoveryRun {
  id          String    @id @default(uuid())
  source      String    // "hub-scrape", "sitemap-parse", "google-api", "ia-cdx"
  config      Json?     // query params, data sets targeted, etc.
  urlsFound   Int       @default(0)
  urlsNew     Int       @default(0)
  urlsChanged Int       @default(0)
  errors      Int       @default(0)
  startedAt   DateTime  @default(now())
  completedAt DateTime?
}

model JobLog {
  id          String   @id @default(uuid())
  jobType     String
  status      String
  details     Json?
  startedAt   DateTime @default(now())
  completedAt DateTime?
}
